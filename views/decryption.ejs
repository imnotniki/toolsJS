<script src="https://cdnjs.cloudflare.com/ajax/libs/crypto-js/4.1.1/crypto-js.min.js"></script>
<script>
    document.getElementById("decryptButton").addEventListener("click", function() {
        const secretKey = document.getElementById('encryptionKey').textContent;
        const encryptedNote = document.getElementById('note').textContent;
        const bytes = CryptoJS.AES.decrypt(encryptedNote, secretKey);
        const originalText = bytes.toString(CryptoJS.enc.Utf8);
        document.getElementById('note').textContent = originalText;
    });
</script>